@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div>
            <img src="/imagenes/logo.png" alt="">
        </div>
        <div>
            <div class="col-12 d-flex justify-content-center">
                <h2 class="titulo">Restaurante</h2>
            </div>
            <div class="col-12 d-flex justify-content-center">
                <h3 class="titulo">eslogan del restaurante</h3>
            </div>
        </div>
    </div>
</div>

<div id="corrusel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#corrusel" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#corrusel" data-bs-slide-to="1"></li>
        <li data-bs-target="#corrusel" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/imagenes/sliders/costillas1.jpg" class="d-block w-100" alt="...">
        </div>
    <div class="carousel-item">
        <img src="/imagenes/sliders/ensalada1.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
        <img src="/imagenes/sliders/limonada2.jpg" class="d-block w-100" alt="...">
    </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#corrusel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#corrusel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <h2 class="titulo">Menú</h2>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <h2 class="titulo-divisor"></h2>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-12 col-md-4">
        <div class="card" style="width: 18rem;">
            <img src="/imagenes/sliders/Entradas.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Entradas</h5>
                <p class="card-text">Platillos ligeros como ensaladas o dedos de queso.</p>
            </div>
            <div class="card-body">
                <button class="boton-nice"><a asp-controller="Entradas" asp-action="Index">Ver más</a></button>
            </div>
        </div>
        </div>
        <div class="col-sm-12 col-md-4">
        <div class="card" style="width: 18rem;">
            <img src="/imagenes/sliders/Comidas.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Comidas</h5>
                <p class="card-text">Platillos completos para comer.</p>
            </div>
            <div class="card-body">
                <button class="boton-nice"><a asp-controller="Comidas" asp-action="Index">Ver más</a></a></button>
            </div>
        </div>
        </div>
        <div class="col-sm-12 col-md-4">
        <div class="card" style="width: 18rem;">
            <img src="/imagenes/sliders/Bebidas.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Bebidas</h5>
                <p class="card-text">Bebidas disponibles.</p>
            </div>
            <div class="card-body">
                <button class="boton-nice"><a asp-controller="Bebidass" asp-action="Index">Ver más</a></button>
            </div>
        </div>
        </div>
    </div>
</div>